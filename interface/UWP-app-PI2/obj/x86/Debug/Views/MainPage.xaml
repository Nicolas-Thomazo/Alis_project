<Page x:ConnectionId='1'
    x:Class="Demoo.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Demoo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:speech="using:Windows.Media.SpeechSynthesis"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="1446">
    <Page.Resources>
        <DataTemplate x:Key="VoiceDataTemplate"                                     >
            <TextBlock Text="{Binding DisplayName}"/>
        </DataTemplate>
    </Page.Resources>
    <Grid Margin="0,0,284,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="86*"/>
            <RowDefinition Height="39*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:ConnectionId='4' x:Name="TitleTextBlock"
                   Text="LIS Interface"
                   FontFamily="Calibri"
                   FontSize="40"
                   Foreground="DarkOrange"
                   TextWrapping="Wrap" Margin="0,0,-32,0" Grid.RowSpan="2"                                                   
                  />

        <ComboBox x:ConnectionId='5' x:Name="VoiceComboBox"
                                                                                       
                  ItemTemplate="{StaticResource VoiceDataTemplate}"
                                                                   
                  PlaceholderText="Pick a voice" 
                  FontFamily="Calibri"
                  FontSize="16"
                  Width="200"
                  Margin="50,319,0,0" Height="32"
                 />

        <Button x:ConnectionId='6' Name="ConvertButton"
                Content="Convert"
                Width="100"
              
                                            Margin="50,378,0,0" VerticalAlignment="Top" Height="32"/>

        <Button x:ConnectionId='7' Name="SaveButton"
                Content="Save as .wav"
                Width="100"
          
                                         Margin="1034,216,0,0" VerticalAlignment="Top" Height="32" />



        <ListView x:ConnectionId='8'                                    IsItemClickEnabled="True" SelectionMode="Single" Margin="118,451,1048,37"                                                 />

        <ListView x:ConnectionId='9'                                          IsItemClickEnabled="True" SelectionMode="Single" Margin="700,397,466,91"                                                      />


        <Button x:ConnectionId='10' Name="ButtonSpeechtotext"
                Content="SpeechToText"
                Width="122"
               
                                                                      RenderTransformOrigin="0.5,0.5" Margin="1012,61,0,0" VerticalAlignment="Top" Height="52"/>

        <Button x:ConnectionId='11' Name="ButtonEnroll"
                Content="NewSpeaker"
                Padding="15"
                                         RenderTransformOrigin="0.5,0.5"
                Width="122" Margin="1012,138,0,0" VerticalAlignment="Top" Height="52"
               />

        <TextBox x:ConnectionId='12' x:Name="TextInputTextBox" 
                                                      
                 PlaceholderText="Enter Text"
                 AcceptsReturn="True" Margin="116,0,465,188" Grid.Row="1"  />


        <StackPanel x:ConnectionId='13' x:Name="StatusPanel" Orientation="Vertical" Margin="50,168,50,20" Grid.Row="1">
            <Border x:ConnectionId='14' x:Name="StatusBorder" >
                <ScrollViewer VerticalScrollMode="Auto"  VerticalScrollBarVisibility="Auto" MaxHeight="200">
                    <!-- Use LiveSetting to enable screen readers to announce the status update. -->
                    <TextBlock x:ConnectionId='16' x:Name="StatusBlock" FontWeight="Bold" AutomationProperties.LiveSetting="Assertive"
                        MaxWidth="{Binding ElementName=Splitter, Path=ActualWidth}"  TextWrapping="Wrap"  />
                </ScrollViewer>
            </Border>
            <TextBlock x:ConnectionId='15' x:Name="StatusLabel"  TextWrapping="Wrap" Text="Status:" FontSize="20"/>
        </StackPanel>


    </Grid>
</Page>

